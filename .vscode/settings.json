{
  "latex-workshop.latex.autoBuild.run": "onSave",
  "latex-workshop.latex.autoBuild.ignore": ["**/main.tex"],
  "latex-workshop.latex.rootFile.useSubFile": true,

  "latex-workshop.latex.recipes": [
    { "name": "latexmk (lualatex)", "tools": ["lualatexmk"] },
    { "name": "latexmk (uplatex)",  "tools": ["uplatexmk"] }
  ],
  "latex-workshop.latex.tools": [
    { "name": "lualatexmk","command": "latexmk", "args": ["-lualatex","-synctex=1","-interaction=nonstopmode","-file-line-error","%DOC%"] },
    { "name": "uplatexmk",  "command": "latexmk", "args": ["-synctex=1","-interaction=nonstopmode","-file-line-error","%DOC%"] }
  ],

  "latex-workshop.latex.autoBuild.recipe": "latexmk (lualatex)",
  "latex-workshop.latex.build.forceRecipeUsage": true,

  "latex-workshop.view.pdf.viewer": "tab"
}
